# Environment Variables Configuration for RUST AI IDE
# Copy this file to .env and fill in the actual values.
# Sensitive values should be retrieved from secure secret managers.

# =============================================================================
# NOTIFICATION ENDPOINTS
# =============================================================================

# Email Configuration
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_FROM_ADDRESS=noreply@rust-ai-ide.com
# EMAIL_USERNAME and EMAIL_PASSWORD should be set via secret manager
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts

# Webhook Configuration
WEBHOOK_URL=https://api.external-service.com/webhook
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# SECURITY ALERT THRESHOLDS
# =============================================================================

# System Resource Thresholds (percentage)
CPU_THRESHOLD_HIGH=80
MEMORY_THRESHOLD_HIGH=85
DISK_THRESHOLD_HIGH=90

# Security Alert Levels (1-5, 5 being highest)
SECURITY_ALERT_LEVEL=3
SECURITY_SCAN_INTERVAL_MINUTES=60

# Security Violation Thresholds
MAX_FAILED_LOGIN_ATTEMPTS=5
SECURITY_VIOLATION_COOLDOWN_MINUTES=15

# =============================================================================
# MONITORING PARAMETERS
# =============================================================================

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL_SECONDS=300
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_ALERT_THRESHOLD_MS=5000

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL_SECONDS=60

# =============================================================================
# CI/CD PIPELINE ENVIRONMENT VARIABLES
# =============================================================================

# CI Platform Configuration
CI_PLATFORM=gitlab
CI_PROJECT_ID=your_project_id
CI_COMMIT_REF_NAME=main

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_TARGET=edge
DEPLOYMENT_STRATEGY=rolling

# Docker Configuration
DOCKER_REGISTRY_URL=registry.example.com
DOCKER_IMAGE_NAME=rust-ai-ide
DOCKER_TAG=latest

# Build Configuration
BUILD_TIMEOUT_MINUTES=30
TEST_COVERAGE_THRESHOLD=80

# Security Scanning
SECURITY_SCAN_ENABLED=true
DEPENDENCY_SCAN_ENABLED=true
SECRET_SCAN_ENABLED=true

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Runtime Configuration
NODE_ENV=development
DATABASE_URL=sqlite://./db.sqlite
SECRET_KEY=your_secret_key_placeholder

# AI Service Configuration
AI_SERVICE_ENDPOINT=https://api.ai-service.com
AI_MODEL_DEFAULT=gpt-4
AI_REQUEST_TIMEOUT_SECONDS=30

# LSP Configuration
LSP_ENABLED=true
LSP_PORT=3000

# Webhook System Configuration
WEBHOOK_SYSTEM_PORT=3000
WEBHOOK_SYSTEM_ENABLED=true

# =============================================================================
# DEPLOYMENT TARGETS
# =============================================================================

# Cloud Provider Configuration
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
GCP_PROJECT_ID=your_gcp_project

# Container Configuration
CONTAINER_PLATFORM=docker
KUBERNETES_NAMESPACE=default

# Edge Runtime Configuration
EDGE_RUNTIME_ENABLED=true
EDGE_FUNCTIONS_ENDPOINT=https://edge.example.com

# Serverless Configuration
LAMBDA_FUNCTION_NAME=rust-ai-ide-lambda
LAMBDA_REGION=us-east-1

# Service Mesh Configuration
SERVICE_MESH_ENABLED=false
ISTIO_ENABLED=false

# =============================================================================
# ROLLBACK CONFIGURATION
# =============================================================================

# Rollback Settings
ROLLBACK_ENABLED=true
ROLLBACK_VERSIONS_TO_KEEP=5
ROLLBACK_TIMEOUT_MINUTES=10

# Blue-Green Deployment
BLUE_GREEN_ENABLED=true
BLUE_GREEN_PROMOTE_TIMEOUT_MINUTES=5

# =============================================================================
# ADDITIONAL SECURITY SETTINGS
# =============================================================================

# Encryption Configuration
ENCRYPTION_ENABLED=true
ENCRYPTION_KEY_ROTATION_DAYS=90

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# TLS Configuration
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# =============================================================================
# DEVELOPMENT ENVIRONMENT OVERRIDES
# =============================================================================
# These can be overridden in .env.development, .env.staging, .env.production

# Debug Settings
DEBUG_ENABLED=false
TRACE_ENABLED=false

# Port Configuration
WEB_PORT=1420
API_PORT=3001

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:1420,https://rust-ai-ide.com

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
SESSION_SECURE_COOKIE=true