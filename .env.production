# Production Environment Configuration
# Overrides for .env.example in production environment

# Application Configuration
NODE_ENV=production
DEBUG_ENABLED=false
TRACE_ENABLED=false

# Monitoring Configuration
MONITORING_ENABLED=true
LOG_LEVEL=warn
LOG_RETENTION_DAYS=90

# Security Configuration
SECURITY_ALERT_LEVEL=4
SECURITY_SCAN_INTERVAL_MINUTES=60

# Notification Configuration
SLACK_CHANNEL=#prod-alerts
WEBHOOK_URL=https://prod-webhook.example.com/alert

# CI/CD Configuration
CI_PLATFORM=gitlab
DEPLOYMENT_ENVIRONMENT=production
BUILD_TIMEOUT_MINUTES=30

# Ports and Endpoints
WEB_PORT=80
API_PORT=443
LSP_PORT=3000
WEBHOOK_SYSTEM_PORT=3000

# Database Configuration
DATABASE_URL=sqlite://./production.db.sqlite

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://rust-ai-ide.com,https://www.rust-ai-ide.com

# Session Configuration
SESSION_SECURE_COOKIE=true

# Performance Monitoring
PERFORMANCE_ALERT_THRESHOLD_MS=5000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Deployment Configuration
DEPLOYMENT_STRATEGY=rolling
BLUE_GREEN_ENABLED=true
ROLLBACK_ENABLED=true
ROLLBACK_VERSIONS_TO_KEEP=5

# TLS Configuration
TLS_CERT_PATH=/etc/ssl/certs/prod-cert.pem
TLS_KEY_PATH=/etc/ssl/private/prod-key.pem

# Cloud Provider Configuration
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1

# Container Configuration
CONTAINER_PLATFORM=kubernetes
KUBERNETES_NAMESPACE=production

# Service Mesh Configuration
SERVICE_MESH_ENABLED=true
ISTIO_ENABLED=true

# Edge Runtime Configuration
EDGE_RUNTIME_ENABLED=true
EDGE_FUNCTIONS_ENDPOINT=https://edge-prod.example.com

# Serverless Configuration
LAMBDA_FUNCTION_NAME=rust-ai-ide-prod
LAMBDA_REGION=us-east-1

# Encryption Configuration
ENCRYPTION_ENABLED=true
ENCRYPTION_KEY_ROTATION_DAYS=30

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365