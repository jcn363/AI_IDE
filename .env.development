# Development Environment Configuration
# Overrides for .env.example in development environment

# Application Configuration
NODE_ENV=development
DEBUG_ENABLED=true
TRACE_ENABLED=true

# Monitoring Configuration
MONITORING_ENABLED=true
LOG_LEVEL=debug
LOG_RETENTION_DAYS=7

# Security Configuration
SECURITY_ALERT_LEVEL=1
SECURITY_SCAN_INTERVAL_MINUTES=30

# Notification Configuration
SLACK_CHANNEL=#dev-alerts
WEBHOOK_URL=https://dev-webhook.example.com/alert

# CI/CD Configuration
CI_PLATFORM=local
DEPLOYMENT_ENVIRONMENT=development
BUILD_TIMEOUT_MINUTES=15

# Ports and Endpoints
WEB_PORT=1420
API_PORT=3001
LSP_PORT=3000
WEBHOOK_SYSTEM_PORT=3000

# Database Configuration
DATABASE_URL=sqlite://./dev.db.sqlite

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:1420,http://127.0.0.1:1420

# Session Configuration
SESSION_SECURE_COOKIE=false

# Performance Monitoring
PERFORMANCE_ALERT_THRESHOLD_MS=30000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=500
RATE_LIMIT_BURST=100