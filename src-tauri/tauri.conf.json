{
  "$schema": "https://schema.tauri.app/config/2",
  "package": {
    "productName": "rust_ai_ide",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.tauri.dev",
      "active": true,
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "windows": [
      {
        "title": "rustaide",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "build": {
    "distDir": "../web/dist/",
    "beforeBuildCommand": "cd ../web && npm run build"
  }
}
