# Staging Environment Configuration
# Overrides for .env.example in staging environment

# Application Configuration
NODE_ENV=staging
DEBUG_ENABLED=false
TRACE_ENABLED=false

# Monitoring Configuration
MONITORING_ENABLED=true
LOG_LEVEL=info
LOG_RETENTION_DAYS=14

# Security Configuration
SECURITY_ALERT_LEVEL=2
SECURITY_SCAN_INTERVAL_MINUTES=45

# Notification Configuration
SLACK_CHANNEL=#staging-alerts
WEBHOOK_URL=https://staging-webhook.example.com/alert

# CI/CD Configuration
CI_PLATFORM=gitlab
DEPLOYMENT_ENVIRONMENT=staging
BUILD_TIMEOUT_MINUTES=20

# Ports and Endpoints
WEB_PORT=1420
API_PORT=3001
LSP_PORT=3000
WEBHOOK_SYSTEM_PORT=3000

# Database Configuration
DATABASE_URL=sqlite://./staging.db.sqlite

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://staging.rust-ai-ide.com

# Session Configuration
SESSION_SECURE_COOKIE=true

# Performance Monitoring
PERFORMANCE_ALERT_THRESHOLD_MS=10000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=200
RATE_LIMIT_BURST=50

# Deployment Configuration
DEPLOYMENT_STRATEGY=blue-green
BLUE_GREEN_ENABLED=true
ROLLBACK_ENABLED=true
ROLLBACK_VERSIONS_TO_KEEP=3

# TLS Configuration
TLS_CERT_PATH=/etc/ssl/certs/staging-cert.pem
TLS_KEY_PATH=/etc/ssl/private/staging-key.pem